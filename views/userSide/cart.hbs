					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>
						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2" id="totalValue">
								{{total}}
							</span>
						</div>
						<div class="size-208">
							<span class="mtext-101 cl2">
								Sub Total:
							</span>
						</div>
							<div class="size-209 p-t-1">
							<span class="mtext-110 cl2" id="subTotalValue">
							
							</span>
						</div>
						
						<div class="size-300">
							<span class="mtext-101 cl2">
								Final Amount:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2" id="finalAmount">
								{{total}}
							</span>
						</div>
					</div>
					{{#if product.empty}}
					{{else}}
					<form action="/checkout" method="post">
					<input id="sendSubTotal" type="text" name="subtotal" hidden>
					<input id="sendfinalAmount" type="text" name="finalAmount" hidden>

					<button type="submit"
							class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
