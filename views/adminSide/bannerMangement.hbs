{{>adminlinks}}

{{>adminSidebar}}
 <main class="main-wrap">
    {{>adminHeader}}
   
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Banners</h3>
            <a class="btn btn-primary offset-10" type="button" href="/admin/add-banners">Add Banner</a>
        </div>


        <div class="card-body">
            <table class="table table-bordered" id="tab">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Expire Date</th>
                        <th style="width: 150px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each banner}}
                      
                    <tr>
                        <td>{{inc @index }}</td>
                        <td><img style="width:90px; height:70px border-radius: 0; !important" src='/uploads/{{this.imagefileName.[0]}}'></td>
                        <td>
                            <div class="">
                                <div  >{{this.name}}
                                </div>
                            </div>
                        </td>
                        <td>{{this.date}}</td>
                        <td>
                            
                            <a href="/admin/delete-banner/{{this._id}}" class="btn btn-secondary"
                                onclick="return confirm('Are you sure you want to delete {{this.Category}}?')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">p
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd"
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg></a>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{!-- <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
