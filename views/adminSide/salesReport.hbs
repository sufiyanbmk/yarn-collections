                                            <input type="month" class="form-control" name="month" placeholder="Date">
                                        </div>
                                       &nbsp;<button class="btn btn-primary mb-2">View the Monthly Report</button>
                                    </form>
                                </div>
                            </div>


                            <div class="card-body">
                                <div class="basic-form">
                                   <form action="/admin/year-sale" method="post">
