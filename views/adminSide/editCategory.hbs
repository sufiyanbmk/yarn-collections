{{>adminlinks}}

{{>adminSidebar}}
<main class="main-wrap">
  {{>adminHeader}}
  <div class="container m-5">
    <form action="/admin/updateCategory/{{catagorydetail._id}}" method="post">

      <div class="form-group col-md-6">
        <label for="exampleFormControlInput1">Catagory</label>
        <input type="text" class="form-control form-control-sm" name="categories" id="exampleFormControlInput1"
          value="{{catagorydetail.categories}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <input class="form-control" name="Description" id="exampleFormControlTextarea1"
          value="{{catagorydetail.Description}}" required rows="3" required></input>
      </div>
      <button class="btn btn-primary offset-10 my-5" type="submit">Update</button>
    </form>
    <a class="btn btn-warning  my-5" href="/admin/backCategory">Back to Catagory</a>
  </div>
</main>

