{{>adminlinks}}

{{>adminSidebar}}
<main class="main-wrap">
    {{>adminHeader}}
    <div class="container m-5">
        {{#if invalidCatagory}}
        <p style="color: red;">{{invalidCatagory}}</p>
        {{/if}}
        <form action="/admin/addCategory" method="post" enctype="multipart/form-data">

            <div class="form-group col-md-6">
                <label for="exampleFormControlInput1">Catagory</label>
                <input type="text" class="form-control form-control-sm" onkeyup="categoryvalidation()" name="categories"
                    id="catagory" required>
            </div>

            <p style="color:red" id="error1"></p>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <input class="form-control" name="Description" id="description" style="width: 50rem;"
                    onkeyup="descriptionvalidation()" rows="3" required></input>
            </div>
            <p style="color:red" id="error2"></p>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header ">
                        <h4>Image</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-upload">
                            <img src="assets/imgs/theme/upload.svg" alt="">
                            <input class="form-control" type="file" name="catagoryimage" multiple required>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary offset-8 my-5" type="submit">Add</button>

        </form>
        <a class="btn btn-warning  my-5" href="/admin/backCategory">Back to Catagory</a>
    </div>
</main>

{{>adminjs}}


