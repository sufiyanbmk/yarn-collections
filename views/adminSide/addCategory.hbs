{{>adminlinks}}

{{>adminSidebar}}
 <main class="main-wrap">
    {{>adminHeader}}
  <div class="container m-5">
    <form onclick="return valid()" action="/admin/addCategory" method="post">

      <div class="form-group col-md-6">
        <label for="exampleFormControlInput1">Catagory</label>
        <input type="text" class="form-control form-control-sm" onkeyup="categoryvalidation()" name="categories"
          id="catagory" required>
      </div>
    
      <p style="color:red" id="error1"></p>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <input class="form-control" name="Description" id="description" style="width: 50rem;"
          onkeyup="descriptionvalidation()" rows="3" required></input>
      </div>
      <p style="color:red" id="error2"></p>
      <button class="btn btn-primary offset-8 my-5" type="submit">Add</button>

    </form>
    <a class="btn btn-warning  my-5" href="/admin/backCategory">Back to Catagory</a>
  </div>
</main>
