    <!-- https://fonts.google.com/specimen/Open+Sans -->

    <link rel="stylesheet" href="jquery-ui-datepicker/jquery-ui.min.css" type="text/css" />
    <!-- http://api.jqueryui.com/datepicker/ -->
    <link rel="stylesheet" href="/admin/css/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="/admin/css/tooplate.css">
    {{>adminlinks}}
</head>

{{>adminSidebar}}
<body>
<main class="main-wrap"> 

    <!-- row -->

    <div class="row tm-mt-big">
        <div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
            <div class="bg-white tm-block">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Add Product</h2>
                    </div>
                </div>
                <form action="/admin/addProduct" method='post' enctype="multipart/form-data" class="tm-edit-product-form" onclick="return valid()">
                    <div class="row mt-4 tm-edit-product-row">
                        <div class="col-xl-7 col-lg-7 col-md-12">
                            <div class="input-group mb-3">
                                <label for="name" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Product
                                    Name
                                </label>
                                <input id="name" name="name" type="text" onkeyup="fname()"
                                    class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" required>
                            </div>
                            <p id="error1" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <label for="description"
                                    class="col-xl-4 col-lg-4 col-md-4 col-sm-5 mb-2">Description</label>
                                <input class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" id="description" rows="3" onkeyup ="description()" name='Description'required></input>
                            </div>
                              <p id="error2" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <label for="category"
                                    class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Category</label>
                                <select name="Category" class="custom-select col-xl-9 col-lg-8 col-md-8 col-sm-7" id="category" onkeyup="category()" required>
                                    <option >selectone</option>
                                    {{#each Categorylist}}
                                    <option >{{this.categories}}</option>
                                    {{/each}}
                                   
                                </select>
                            </div>
                              <p id="error3" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <label for="expire_date"
                                    class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">price
                                </label>
                                <input name="price" type="text" onkeyup="price()" id="price"
                                    class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                    data-large-mode="true" required>
                            </div>
                              <p id="error4" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <label for="expire_date"
                                    class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Offer price
                                </label>
                                <input name="offerPrice" type="text" onkeyup="offerprice()" id="offerprice"
                                    class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                    data-large-mode="true" required>
                            </div>
                              <p id="error5" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <label for="stock" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Units In
                                    Stock
                                </label>
                                <input id="stock" name="stock" type="text" onkeyup="stock()" 
                                    class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7" required>
                            </div>
                              <p id="error6" style="color: red;"></p>
                            <div class="input-group mb-3">
                                <div class="ml-auto col-xl-8 col-lg-8 col-md-8 col-sm-7 pl-0">
                                    <button type="submit" class="btn btn-primary">Add
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-12 mx-auto mb-4">
                            <div class="tm-product-img-dummy mx-auto">
                                <i class="fas fa-5x fa-cloud-upload-alt"></i>
                                {{#if product}}
                                <img id='imgView' style="width: 200px; height:'300px'" src="/product-images/{{product._id}}.jpg">
                                {{else}}
                                  <img id='imgView' style="width: 200px; height:'300px'" src="/images/upload image.svg">
                                  {{/if}}
                                    {{!-- onclick="document.getElementById('fileInput').click();"></i> --}}
                            </div>
                            <div class="custom-file mt-3 mb-3">
                                <input id="fileInput" name="image" type="file" style="display:none;" onchange="viewImage(event)" multiple required/>
                                <input type="button" name="imagee" class="btn btn-primary d-block mx-auto" value="Upload ..."
                                    onclick="document.getElementById('fileInput').click();" />
                            </div>
                        </div>
                          
                </form>
                  <a class="btn btn-warning  my-5" href="/admin/backProduct">Back to product</a>
            </div>
        </div>
    </div>
    </div>
    </div>
</main>    
    <script src="/admin/adminFormValidation/addProduct.js"></script>
<script defer src="https://cdn.crop.guide/loader/l.js?c=FKRPKJ"></script>
     
    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
    <!-- https://jqueryui.com/download/ -->
    <script src="js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script>
        function viewImage(fileInput){
            document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
        }
    </script>
</body>

</html>