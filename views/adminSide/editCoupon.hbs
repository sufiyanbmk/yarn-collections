{{>adminlinks}}

{{>adminSidebar}}
 <main class="main-wrap">
    {{>adminHeader}}
    
    <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Coupon</h2>
                      
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form action="/admin/update-coupon/{{singleCoupon._id}}" method="post">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Coupon Code</label>
                                    <input type="text" name="couponCode"  value="{{singleCoupon.value}}" class="form-control" id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <input placeholder="Type here" name="description" class="form-control" rows="4" value="{{singleCoupon.description}}">
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Coupon value</label>
                                            <div class="row gx-2">
                                                <input placeholder="$" name="value" type="text" value="{{signleCoupon.value}}" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Expire date</label>
                                            <input  type="date" name="date" class="form-control" value="{{singleCoupon.date}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label class="form-label">Coupon Type</label>
                                        <select name="type" class="form-select">
                                            <option> Percentage</option>
                                            <option> Amount</option>
                                        </select>
                                    </div>
                                </div>
                           
                                <label class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <span class="form-check-label"> Make a template </span>
                                </label>
                            
                        </div>
                    </div> <!-- card end// -->
                 
                </div>
               
                </div>
                  <div>
                          <button type="submit" class="btn btn-md rounded font-sm hover-up">Edit Coupon</button>
                        </div>
                  </form>
            </div>
        </section> <!-- content-main end// -->
 </main>
{{>adminjs}}