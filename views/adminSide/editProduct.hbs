<body>
    {{>adminSidebar}}


    <main class="main-wrap">

        <div class="row tm-mt-big">
            <div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
                <div class="bg-white tm-block">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Update Product</h2>
                        </div>
                    </div>
                    <form action="/admin/editProduct/{{product._id}}" method='post' enctype="multipart/form-data"
                        class="tm-edit-product-form">
                        <div class="row mt-4 tm-edit-product-row">
                            <div class="col-xl-7 col-lg-7 col-md-12">
                                <div class="input-group mb-3">
                                    <label for="name" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Product
                                        Name
                                    </label>
                                    <input id="name" name="name" type="text" value="{{product.name}}"
                                        class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" required>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="description"
                                        class="col-xl-4 col-lg-4 col-md-4 col-sm-5 mb-2">Description</label>
                                    <input class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" rows="3"
                                        name='Description' value="{{product.Description}}" required></input>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="category"
                                        class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Category</label>
                                    <select name="Category" class="custom-select col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                        id="category" required>
                                        <option>{{product.Category}}</option>
                                        {{#each Categorylist}}
                                        <option>{{this.categories}}</option>
                                        {{/each}}

                                    </select>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="expire_date"
                                        class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">price
                                    </label>
                                    <input name="price" type="text" value="{{product.price}}"
                                        class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                        data-large-mode="true" required>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="expire_date"
                                        class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Offer price
                                    </label>
                                    <input name="offerPrice" type="text" value="{{product.offerPrice}}"
                                        class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                        data-large-mode="true" required>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="stock" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Units
                                        In
                                        Stock
                                    </label>
                                    <input id="stock" name="stock" type="number" value="{{product.stock}}"
                                        class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7" required>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="ml-auto col-xl-8 col-lg-8 col-md-8 col-sm-7 pl-0">
                                        <button type="submit" class="btn btn-primary">Update
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-6 col-md-12 mx-auto mb-4">
                                <div class="tm-product-img-dummy mx-auto">
                                    <i class="fas fa-5x fa-cloud-upload-alt"></i>
                                    {{!-- onclick="document.getElementById('fileInput').click();"></i> --}}
                                    <img id='imgView1' style="width: 200px; height:'300px'"
                                        src='/uploads/{{product.imagefileName.[0]}}'>
                                </div>
                                <div class="tm-product-img-dummy mx-auto">
                                    <i class="fas fa-5x fa-cloud-upload-alt"></i>
                                    {{!-- onclick="document.getElementById('fileInput').click();"></i> --}}
                                    <img id='imgView2' style="width: 200px; height:'300px'"
                                        src='/uploads/{{product.imagefileName.[1]}}'>
                                </div>
                                <div class="tm-product-img-dummy mx-auto">
                                    <i class="fas fa-5x fa-cloud-upload-alt"></i>
                                    {{!-- onclick="document.getElementById('fileInput').click();"></i> --}}
                                    <img id='imgView2' style="width: 200px; height:'300px'"
                                        src='/uploads/{{product.imagefileName.[2]}}'>
                                </div>

                                <div class="custom-file mt-3 mb-3">

                                    <input id="fileInput" name="image" type="file" class='imgView'
                                        onchange="viewImageEdit(event)" style="display:none;" multiple required>
                                    <input type="button" name="images" class="btn btn-primary d-block mx-auto"
                                        value="Upload ..." onclick="document.getElementById('fileInput').click();" />
                                </div>
                            </div>
                    </form>
                    <a class="btn btn-warning  my-5" href="/admin/backProduct">Back to product</a>
                </div>
            </div>
        </div>
        </div>
        </div>
        <script defer src="https://cdn.crop.guide/loader/l.js?c=FMLTXQ"></script>
        <script src="js/jquery-3.3.1.min.js"></script>
