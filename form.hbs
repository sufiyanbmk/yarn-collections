<div class="container">
   <div class="col-md-12">
      <div class="invoice">
         <!-- begin invoice-company -->
         <div class="invoice-company text-inverse f-w-600">
        
            YARN FASHIONS.COM, 
         </div>
         <!-- end invoice-company -->
         <!-- begin invoice-header -->
         <div class="invoice-header">
            <div class="invoice-from">
               <small>from</small>
               <address class="m-t-5 m-b-5">
                  <strong class="text-inverse">{{data.[0].addressName}}</strong><br>
                  Street Address<br>
                  {{data.[0].addressCity}}, {{data.[0].addressPincode}}<br>
                  INDIA<br>
                  Phone: {{data.[0].addressPhone}}<br>
                  Email: {{data.[0].adddressEmail}}
               </address>
            </div>
            <div class="invoice-to">
               <small>to</small>
               <address class="m-t-5 m-b-5">
                  <strong class="text-inverse">YARN FASHIONS</strong><br>
                 kalamsery,<br>
                  kochi,kerala<br>
                  Phone: 7306955181<br>
                  Email: sufiyanbmk@gmail.com

               </address>
            </div>
            <div class="invoice-date">
               <small>Invoice /</small>
               <div class="date text-inverse m-t-5">{{data.[0].orderDate}}</div>
               <div class="invoice-detail">
                  {{data.[0]._id}}<br>
                  {{data.[0].status}}
               </div>
            </div>
         </div>
         <!-- end invoice-header -->
         <!-- begin invoice-content -->
         <div class="invoice-content">
            <!-- begin table-responsive -->
            <div class="table-responsive">
               <table class="table table-invoice">
                  <thead>
                     <tr>
                        <th>IMAGE</th>
                        <th>PRODUCT DESCRIPTION</th>
                        <th class="text-center" width="10%">RATE</th>
                        <th class="text-center" width="10%">QUANTITY</th>
                        <th class="text-center" width="20%">TOTAL</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td ><img class="img" style="width: 70px; height:70px"
										src='/uploads/{{data.[0].products.imagefileName.[0]}}'></img></td>
                        <td>
                           <span class="text-inverse">{{data.[0].products.name}}</span><br>
                           <small>{{data.[0].products.Description}}.</small>
                        </td>
                        <td class="text-center">${{data.[0].products.offerPrice}}</td>
                        <td class="text-center">{{data.[0].quantity}}</td>
                        <td class="text-center">${{data.[0].totalAmount}}</td>
                     </tr>
                    
                  </tbody>
               </table>
            </div>
            <!-- end table-responsive -->
            <!-- begin invoice-price -->
            <div class="invoice-price">
               <div class="invoice-price-left">
                  <div class="invoice-price-row">
                     <div class="sub-price">
                        <small>SUBTOTAL</small>
                        $<span class="text-inverse" id="proTotal">{{data.[0].totalAmount}}</span>
                     </div>
                     <div class="sub-price">
                        <i class="fa fa-plus text-muted"></i>
                     </div>
                     <div class="sub-price">
                        <small>{{invoice.[0].paymentMethod}} FEE (3.4%)</small>
                        <span class="text-inverse">$10.00</span>
                     </div>
                  </div>
               </div>
               <div class="invoice-price-right">
                  <small>TOTAL</small>$<span class="f-w-600" id="grandTotal"></span>
               </div>
            </div>
            <!-- end invoice-price -->
         </div>
         <!-- end invoice-content -->
         <!-- begin invoice-note -->
         <div class="invoice-note">
            * Return accept only before 30 days<br>
            * You must keep the recipt<br>
            * If you have any questions concerning this invoice, contact  [sufiyan, 9961592326, sufiyanBmk@gmil.com]
         </div>
         <!-- end invoice-note -->
         <!-- begin invoice-footer -->
         <div class="invoice-footer">
            <p class="text-center m-b-5 f-w-600">
               THANK YOU FOR YOUR BUSINESS
            </p>
            <p class="text-center">
               <span class="m-r-10"><i class="fa fa-fw fa-lg fa-globe"></i> YarnFashions.com</span>
               <span class="m-r-10"><i class="fa fa-fw fa-lg fa-phone-volume"></i> 9961592326</span>
               <span class="m-r-10"><i class="fa fa-fw fa-lg fa-envelope"></i> sufiyanBmk@gmil.com</span>
            </p>
         </div>
         <!-- end invoice-footer -->
      </div>
   </div>
</div>

